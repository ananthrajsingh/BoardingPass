    <ImageView
        android:id="@+id/right_rectangle_imageview"
        android:layout_width="60dp"
        android:layout_height="80dp"

        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_passenger_name"
        app:srcCompat="@drawable/shape_rectangle_stroke"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:id="@+id/textview_passenger_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/passenger_label"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:id="@+id/textview_passenger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/passenger_name"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_passenger_label" />

    <ImageView
        android:id="@+id/left_rectangle_imageview"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_passenger_name"
        app:srcCompat="@drawable/shape_rectangle_stroke"
        android:layout_marginStart="16dp" />


    <TextView
        android:id="@+id/divider_textview"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:background="#000000"
        app:layout_constraintLeft_toRightOf="@+id/left_rectangle_imageview"
        app:layout_constraintBottom_toBottomOf="@+id/left_rectangle_imageview"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/left_rectangle_imageview"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.507"
        app:layout_constraintRight_toLeftOf="@+id/textView_airport_code_right"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/textView_airport_code_left"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="JFK"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/left_rectangle_imageview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/left_rectangle_imageview"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/left_rectangle_imageview"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView_airport_code_right"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="DCA"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintBottom_toBottomOf="@+id/right_rectangle_imageview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/right_rectangle_imageview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/right_rectangle_imageview"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textview_boarding_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boarding_time_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/left_rectangle_imageview"
        app:layout_constraintRight_toLeftOf="@+id/textview_boarding_in_label"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textview_boarding_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boarding_time"
        android:layout_marginLeft="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_boarding_time_label"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textview_boarding_in_label"
        android:text="@string/boarding_in_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/right_rectangle_imageview"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/textview_boarding_in"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textview_boarding_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:text="@string/boarding_in_time"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorAccent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/textview_boarding_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_boarding_in_label"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textview_departure_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/departure_time_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_boarding_time"
        app:layout_constraintRight_toLeftOf="@+id/textview_arrival_label"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textview_departure"
        android:textColor="#00e676"
        android:layout_width="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_height="wrap_content"
        android:text="@string/departure_time"
        app:layout_constraintLeft_toLeftOf="@+id/textview_departure_label"
        app:layout_constraintTop_toBottomOf="@+id/textview_departure_label" />

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:id="@+id/textview_arrival_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrival_time_label"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_boarding_in"
        app:layout_constraintLeft_toLeftOf="@+id/textview_boarding_in"
        app:layout_constraintHorizontal_bias="0.027"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textview_arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrival_time"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#00e676"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_arrival_label"
        app:layout_constraintLeft_toLeftOf="@+id/textview_arrival_label"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageView_table_head"
        android:layout_width="368dp"
        android:layout_height="21dp"
        app:srcCompat="@drawable/shape_rectangle_fill_light"
        android:background="@color/colorPrimaryLight"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_arrival"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView_terminal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terminal_label"
        app:layout_constraintTop_toTopOf="@+id/imageView_table_head"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_table_head"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView_gate_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gate_label"
        app:layout_constraintTop_toTopOf="@+id/imageView_table_head"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_table_head"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView_seat_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seat_label"
        app:layout_constraintTop_toTopOf="@+id/imageView_table_head"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_table_head"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="368dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_table_head"
        app:srcCompat="@drawable/shape_rectangle_fill_light" />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/textView_terminal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terminal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_terminal_label"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_terminal_label"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView_terminal_label"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.52"
        android:layout_marginBottom="8dp" />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/textView_gate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gate"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_gate_label"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView_gate_label"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.509"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seat"
        android:textColor="#ffffff"

        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_seat_label"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView_seat_label"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_seat_label"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.489"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/barcode"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>

